      <style>
        .contact-icons {
          position: fixed;
          bottom: 150px;
          right: 25px;
          display: flex;
          flex-direction: column;
          gap: 10px;
          z-index: 999;
        }

        .contact-icons a img {
          width: 50px;
          height: 50px;
          transition: transform 0.5s ease;
          animation: pulse 0.4s infinite;
        }

        .contact-icons a img:hover {
          transform: scale(1.2);
        }

        @keyframes pulse {
          0% {
            transform: scale(1);
          }

          50% {
            transform: scale(1.05);
          }

          100% {
            transform: scale(1);
          }
        }
      </style>
</head>

