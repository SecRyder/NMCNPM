<% extend("master.ejs") %>
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Quản lý chuyên khoa</h1>
    <a href="/admin/manage/specialization/create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus-circle fa-sm text-white-50"></i> Thêm mới
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách chuyên khoa</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered display " id="listSpecializations" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    <% specializations.forEach(function(spe) { %>
                        <tr>
                            <td> <%= spe.id %></td>
                            <td><%= spe.name %></td>
                            <td>
                                <button class="btn btn-info btn-circle btn-sm view-specialization-info" data-id="<%= spe.id %>">
                                    <i class="fas fa-info-circle"></i>
                                </button>
                                <button class="btn btn-primary btn-circle btn-sm edit-specialization" data-id="<%= spe.id %>">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-danger btn-circle btn-sm delete-specific-specialization" 
                                        data-id="<%= spe.id %>" 
                                        data-name="<%= spe.name %>">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal xem chi tiết chuyên khoa -->
<div class="modal fade" id="viewSpecializationModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Chi tiết chuyên khoa</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-4">
            <img id="modal-specialization-image" class="img-fluid rounded" src="" alt="Hình ảnh chuyên khoa">
          </div>
          <div class="col-md-8">
            <h4 id="modal-specialization-name" class="font-weight-bold"></h4>
            <div class="mt-3">
              <h5>Mô tả:</h5>
              <p id="modal-specialization-description" class="text-justify"></p>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
      </div>
    </div>
  </div>
</div>

<script>
    $(document).ready(function() {
        $("div #collapseUtilities").addClass('show');
        $("div #collapseUtilities").find($("#aManageSpecialization")).addClass("active");
        $(".supporter-list-posts").removeClass("active");
    });
</script>